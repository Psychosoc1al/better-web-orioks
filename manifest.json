{
    "manifest_version": 2,
    "name": "Better web-ORIOKS",
    "version": "0.4.0",
    "description": "Улучшение веб-версии ОРИОКС: изменение подсчёта баллов и местами дизайна, а также добавление/доработка расписания",
    "developer": {
        "name": "Psychosoc1al",
        "url": "https://github.com/Psychosoc1al/better-web-orioks"
    },
    "icons": {
        "48": "icons/icon-48.png",
        "96": "icons/icon-96.png"
    },
    "background": {
        "scripts": ["background_scripts/scheduleProcessing.js"],
        "persistent": false
    },
    "content_scripts": [
        {
            "matches": ["https://orioks.miet.ru/*"],
            "js": ["content_scripts/main.js"],
            "css": ["styles/styles.css"],
            "run_at": "document_end"
        }
    ],
    "permissions": [
        "cookies",
        "storage",
        "https://miet.ru/schedule/data",
        "https://orioks.miet.ru/student/student"
    ]
}
